<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_youtubefragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_height="60dp">


        <TextView
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textColor="@color/text_color"
            android:id="@+id/youtubefragmentsongname"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_above="@+id/youtubefragmentartist"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toLeftOf="@+id/youtubefragmentdownload"
            android:layout_toStartOf="@+id/youtubefragmentdownload" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textColor="@color/holo_pink_"
            android:id="@+id/youtubefragmentartist"
            android:layout_alignBottom="@+id/youtubefragmentdownload"
            android:layout_alignLeft="@+id/youtubefragmentsongname"
            android:layout_alignStart="@+id/youtubefragmentsongname"
            android:layout_toLeftOf="@+id/youtubefragmentdownload"
            android:layout_toStartOf="@+id/youtubefragmentdownload" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/youtubefragmentdownload"
            android:background="@drawable/downloadbutton_selector"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/youtubefragmentplay"
            android:layout_toStartOf="@+id/youtubefragmentplay" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/youtubefragmentplay"
            android:background="@drawable/playbutton_selector"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>




</android.support.v7.widget.CardView>