<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_detailfriend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="2dp"
    card_view:contentPadding="1dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="#fff"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">


        <TextView
            android:id="@+id/playlist_songname"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="3dp"
            android:scrollHorizontally="true"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="sans-serif-condensed"
            android:text="Medium Text"
            android:textSize="21sp"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/deletebutton"
            android:layout_toStartOf="@+id/deletebutton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/delete_add_button"
            android:minHeight="0dp"
            android:textSize="15sp"
            android:id="@+id/deletebutton"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp"
            android:text="Delete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="2dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:textColor="@color/holo_pink_"
            android:fontFamily="sans-serif"
            android:id="@+id/artistname"
            android:layout_below="@+id/playlist_songname"
            android:layout_alignLeft="@+id/playlist_songname"
            android:layout_alignStart="@+id/playlist_songname" />


    </RelativeLayout>
</android.support.v7.widget.CardView>