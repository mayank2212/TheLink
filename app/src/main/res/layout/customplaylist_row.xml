<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="2dp"
    android:longClickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:background="#fff"
        android:id="@+id/mainlayout"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:layout_marginTop="10dp"
            android:id="@+id/playlistname"
            android:padding="1dp"
            android:maxLines="1"
            android:textSize="19dp"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/text_color"
            android:layout_alignParentTop="true"
             />

        <ImageButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:minHeight="0dp"
            android:textColor="@color/holo_pink_"
            android:textSize="13sp"
            android:background="@drawable/editplaylist_selector"
            android:id="@+id/editbutton"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:maxLines="1"
            android:textSize="15sp"
            android:padding="1dp"
            android:id="@+id/likes_number"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@color/holo_pink_"
            android:layout_below="@+id/playlistname"
            android:layout_alignLeft="@+id/playlistname"
            android:layout_alignStart="@+id/playlistname" />

        <ImageButton
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:minHeight="0dp"
            android:id="@+id/imageButton5"
            android:background="@drawable/delete_selector"
            android:layout_toLeftOf="@+id/editbutton"
            android:layout_alignBottom="@+id/editbutton"
            android:layout_alignTop="@+id/editbutton" />


    </RelativeLayout>


</RelativeLayout>