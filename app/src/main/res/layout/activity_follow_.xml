<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.googlepluslogin.NewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/mainlayoutfollow"
        android:layout_height="wrap_content">


    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/toolbar_follow"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="2.5dp"
        android:layout_marginTop="2dp"
        android:dividerHeight="0.30dp"
        android:divider="@android:color/black"
        android:layout_below="@+id/toolbar_follow"
        android:id="@+id/listView_follow"
        android:layout_above="@+id/bottom_navigation_bar_follow"/>


        <com.ashokvarma.bottomnavigation.BottomNavigationBar
            android:id="@+id/bottom_navigation_bar_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"/>


    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_below="@+id/toolbar_follow"
        android:layout_height="wrap_content"
        android:text="You are not following anyone" />
    </RelativeLayout>


    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:visibility="gone"
        android:id="@+id/nointernetfollow"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="No Internet Connection... Please connect to internet.."
            android:id="@+id/textView2"
            android:gravity="center"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp"
            android:layout_marginTop="110dp" />
    </RelativeLayout>

</RelativeLayout>
